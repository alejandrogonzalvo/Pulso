{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Pulso",
  "version": "0.1.0",
  "identifier": "com.alejandrogonzalvo.pulso",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Pulso",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "alejandrogonzalvo",
    "homepage": "https://github.com/alejandrogonzalvo/Pulso"
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/alejandrogonzalvo/Pulso/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": ""
    }
  }
}
